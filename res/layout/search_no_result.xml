<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/mainScreenWrapper"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutNavigation" >

        <TextView
            android:id="@+id/newSearchResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/searchResultTitle"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/searchAgain"
            android:layout_width="225dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mid_menu_button"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/searchAgain"
            android:textSize="10sp" />

    </RelativeLayout>
</RelativeLayout>
